<div class="card-body">
  <%= form_for @appointment do |f| %>
    <% if current_user.present? %>
      <div class="form-horizontal">
        <div class="form-group">
          <div class="col-md-8 offset-md-2">
            <%= f.label "last_name", class: "form-label" %>
            <%= f.text_field :last_name, class: "form-control",
            disabled: true, value: current_user.profile.last_name %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-8 offset-md-2">
            <%= f.label "first_name", class: "form-label" %>
            <%= f.text_field :first_name, class: "form-control", disabled: true,
            value: current_user.profile.first_name %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-8 offset-md-2">
            <%= f.label "phone", class: "form-label" %>
            <%= f.text_field :phone_patient, class: "form-control",disabled: true,
            value: current_user.profile.phone%>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-8 offset-md-2">
            <%= f.label "email", class: "form-label" %>
            <%= f.email_field :email, class: "form-control",
            disabled: true, value: current_user.email %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-8 offset-md-2">
            <%= f.hidden_field  :patient_id, :value => current_user.id, class: "form-control"%>
          </div>
        </div>
    <% end %>
        <div class="form-group">
          <div class="col-md-8 offset-md-2">
            <%= f.label "doctor", class: "form-label"%>
            <%= f.select :doctor_id, @doctors.map { |d| [d.profile.first_name + d.profile.last_name, d.id] }, {include_blank: true}, {class: "form-control"}%>
          </div> 
        </div>
        <div class="form-group">
          <div class="col-md-8 offset-md-2">
            <%= f.label "message" , class: "form-label"%>
            <%= f.text_area :message, placeholder: ("message"), class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-8 text-center">
            <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </div>
  <% end %>
</div>
